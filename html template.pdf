// Online Job Portal Implementation in JavaScript

// Initialize job list
let jobs = [];

// HTML for the job portal
document.body.innerHTML = `
  <div id="job-portal">
    <h1>Online Job Portal</h1>
    <div id="job-form">
      <h2>Post a Job</h2>
      <label>Job Title:</label>
      <input type="text" id="job-title" placeholder="Job Title" />
      <label>Job Description:</label>
      <textarea id="job-description" placeholder="Job Description"></textarea>
      <label>Company Name:</label>
      <input type="text" id="job-company" placeholder="Company Name" />
      <label>Contact Email:</label>
      <input type="email" id="job-email" placeholder="Contact Email" />
      <button id="post-job">Post Job</button>
      <div id="form-errors" style="color: red; margin-top: 10px;"></div>
    </div>
    <div id="job-list">
      <h2>Available Jobs</h2>
      <ul id="jobs"></ul>
    </div>
  </div>
`;

// Helper function to render the job list
function renderJobs() {
  const jobList = document.getElementById("jobs");
  jobList.innerHTML = jobs.map((job, index) => `
    <li>
      <h3>${job.title}</h3>
      <p>${job.description}</p>
      <p><strong>Company:</strong> ${job.company}</p>
      <p><strong>Email:</strong> ${job.email}</p>
      <button onclick="deleteJob(${index})">Delete</button>
    </li>
  `).join("");
}

// Function to validate form inputs
function validateForm(title, description, company, email) {
  const errors = [];
  const emailPattern = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;

  if (!title) errors.push("Job Title is required.");
  if (!description) errors.push("Job Description is required.");
  if (!company) errors.push("Company Name is required.");
  if (!email || !emailPattern.test(email)) errors.push("A valid Contact Email is required.");

  return errors;
}

// Function to add a job
function addJob() {
  const title = document.getElementById("job-title").value;
  const description = document.getElementById("job-description").value;
  const company = document.getElementById("job-company").value;
  const email = document.getElementById("job-email").value;

  const errors = validateForm(title, description, company, email);

  const errorContainer = document.getElementById("form-errors");
  if (errors.length > 0) {
    errorContainer.innerHTML = errors.join("<br>");
    return;
  } else {
    errorContainer.innerHTML = "";
  }

  // Add new job to the list
  jobs.push({ title, description, company, email });
  renderJobs();

  // Clear form inputs
  document.getElementById("job-title").value = "";
  document.getElementById("job-description").value = "";
  document.getElementById("job-company").value = "";
  document.getElementById("job-email").value = "";
}

// Function to delete a job
function deleteJob(index) {
  jobs.splice(index, 1);
  renderJobs();
}

// Add event listener for the "Post Job" button
document.getElementById("post-job").addEventListener("click", addJob);

// Live validation feedback
document.querySelectorAll("#job-title, #job-description, #job-company, #job-email").forEach(input => {
  input.addEventListener("input", () => {
    document.getElementById("form-errors").innerHTML = "";
  });
});

